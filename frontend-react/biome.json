{
  "$schema": "https://biomejs.dev/schemas/biome.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "errors": {
        "no-unused-vars": "off",            // Desativa a verificação de variáveis não usadas
        "no-unused-expressions": "off",     // Desativa a verificação de expressões não usadas
        "no-unreachable": "off",            // Desativa a verificação de código inatingível
        "no-unused-labels": "off",          // Desativa a verificação de labels não usados
        "no-empty": "off",                  // Desativa a verificação de blocos vazios
        "no-console": "off",                // Desativa o erro para `console.log` e afins (útil em dev)
        "no-debugger": "off"                // Desativa o erro para o uso de `debugger`
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "quotes": "double",
    "jsxQuotes": "double"
  }
}
