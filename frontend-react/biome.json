{
  "$schema": "https://biomejs.dev/schemas/biome.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "errors": {
        "no-unused-vars": "off",
        "no-unused-expressions": "off",
        "no-unreachable": "off",
        "no-unused-labels": "off",
        "no-empty": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "quotes": "double",
    "jsxQuotes": "double"
  }
}
